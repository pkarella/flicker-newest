<%= form_for @image do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :image, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-6">
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Add Picture" %>
  </div>
<% end %>
